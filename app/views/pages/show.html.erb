<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <% if !flash[:notice].blank? %>
          <div class="alert alert-success">
            <%= flash[:notice] %>
          </div>
      <% end %>

      <%= link_to("<< Back to List", pages_path, :class => "back-link") %>
      <div class="pages show">
        <h2>Show page</h2>

        <table class="table table-hover table-striped table-bordered" summary="Page detail view">
          <tbody>
          <tr>
            <th>Name</th>
            <td><%= @page.name %></td>
          </tr>
          <tr>
            <th>Position</th>
            <td><%= @page.position %></td>
          </tr>
          <tr>
            <th>Visible?</th>
            <td><%= @page.visible ? "Yes" : "No" %></td>
          </tr>
          <tr>
            <th>Created</th>
            <td><%= @page.created_at %></td>
          </tr>
          <tr>
            <th>Updated</th>
            <td><%= @page.updated_at %></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>