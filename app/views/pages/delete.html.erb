<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Pages</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to("<< Back to List", pages_path, :class => "btn btn-success") %>

      <div class="pages delete">
        <h2>Delete Page</h2>

        <%= form_for(@page, :method => "delete") do |f| %>
            <p>Are you sure you want to permanently delete this page?</p>
            <p class="reference-name"><%= f.object.name %></p>
            <%= f.submit "Delete Page", class: "btn btn-danger" %>
        <% end %>

      </div>

    </div>
  </div>
</div>