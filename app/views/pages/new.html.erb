<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>New page</h2>

      <%= link_to("<< Back to List", pages_path, class: "back-link") %>

      <div class="pages new">
        <%= form_for(@page) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :subject_id %>
              <%= f.text_field :subject_id, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :permalink %>
              <%= f.text_field :permalink, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :position %>
              <%= f.text_field :position, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :visible %>
              <%= f.text_field :visible, class: "form-control" %>
            </div>
            <%= f.submit("Create Page", class: "btn btn-primary") %>
        <% end %>
      </div>

    </div>
  </div>
</div>