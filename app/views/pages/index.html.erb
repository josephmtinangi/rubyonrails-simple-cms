<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Pages</h1>
    <p class="lead">These are all your pages.</p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <%= link_to("Add new", new_page_path, class: "btn btn-outline-primary") %>

      <div class="pages index">

        <table class="table table-hover">
          <thead class="thead-inverse">
          <tr>
            <th>#</th>
            <th>Subject ID</th>
            <th>Name</th>
            <th>Permalink</th>
            <th>Visible</th>
            <th>Sections</th>
            <th>Created</th>
            <th>Updated</th>
            <th colspan="3">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @pages.each do |page| %>
              <tr>
                <td><%= page.position %></td>
                <td><%= page.subject_id %></td>
                <td><%= page.name %></td>
                <td><%= page.permalink %></td>
                <td><%= status_tag(page.visible) %></td>
                <td><%= page.sections.size %></td>
                <td><%= page.created_at %></td>
                <td><%= page.updated_at %></td>
                <td><%= link_to("Show", page_path(page), class: "action show") %></td>
                <td><%= link_to("Edit", edit_page_path(page), class: "action edit") %></td>
                <td><%= link_to("Delete", delete_page_path(page), class: "action delete") %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>