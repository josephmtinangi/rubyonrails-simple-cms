<!DOCTYPE html>
<html>
<head>
  <title>FrostyResonance5318</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<nav class="navbar navbar-dark bg-inverse">
  <%= link_to("Frosty Resonance", root_path, class: "navbar-brand") %>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <%= link_to("Home", root_path, class: "nav-link") %>
    </li>
    <li class="nav-item">
      <%= link_to("Subjects", subjects_path, class: "nav-link") %>
    </li>
    <li class="nav-item">
      <%= link_to("Pages", pages_path, class: "nav-link") %>
    </li>
    <li class="nav-item">
      <%= link_to("Sections", sections_path, class: "nav-link") %>
    </li>
  </ul>
</nav>

<% if !flash[:notice].blank? %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
<% end %>

<%= yield %>
</body>
</html>
