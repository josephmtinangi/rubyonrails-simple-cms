<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Sections</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <%= link_to("<< Back to List", sections_path, class: "btn btn-success") %>

      <div class="sections delete">

        <%= form_for(@section, method: :delete) do |f| %>
            <p>
              Are you sure you want to delete this section permanently?
            </p>
            <p>
              <%= f.object.name %>
            </p>

            <%= f.submit("Delete Section", class: "btn btn-danger") %>

        <% end %>

      </div>

    </div>
  </div>
</div>