<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <%= link_to("<< Back to List", sections_path, class: "back-link") %>

      <div class="sections new">
        <h2>New Section</h2>

        <%= form_for(@section) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :position %>
              <%= f.text_field :position, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :visible %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :content_type %>
              <%= f.text_field :content_type, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :content %>
              <%= f.text_area :content, class: "form-control", rows: "5" %>
            </div>
            <div class="form-group">
              <%= f.label :page_id %>
              <%= f.text_field :page_id, class: "form-control" %>
            </div>

            <%= f.submit("Create Section", class: "btn btn-primary") %>
        <% end %>

      </div>

    </div>
  </div>
</div>