<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Sections</h1>
    <p class="lead">These are all your sections.</p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">


      <div class="sections index">

        <%= link_to("Add new", new_section_path, class: "btn btn-outline-primary") %>

        <table class="table table-hover table-striped">
          <thead class="thead-inverse">
          <tr>
            <th>#</th>
            <th>Page ID</th>
            <th>Name</th>
            <th>Visible?</th>
            <th colspan="3">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @sections.each do |section| %>
              <tr>
                <td><%= section.position %></td>
                <td><%= section.page_id %></td>
                <td><%= section.name %></td>
                <td><%= status_tag(section.visible) %></td>
                <td><%= link_to("Show", section_path(section), class: "show action") %></td>
                <td><%= link_to("Edit", edit_section_path(section), class: "edit action") %></td>
                <td><%= link_to("Delete", delete_section_path(section), class: "delete action") %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</div>